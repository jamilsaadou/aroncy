  "name": "e-aroncy",
  "version": "1.0.0",
  "description": "Alliance Régionale des ONG pour la Cybersécurité en Afrique de l'Ouest - Plateforme de formation et ressources en cybersécurité",
  "private": true,
  "author": {
    "name": "E-ARONCY Team",
    "email": "contact@e-aroncy.org",
    "url": "https://e-aroncy.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-organisation/e-aroncy.git"
  },
  "keywords": [
    "cybersecurity",
    "ngo",
    "west-africa",
    "education",
    "training",
    "nextjs",
    "react",
    "tailwindcss"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rimraf .next out dist",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
